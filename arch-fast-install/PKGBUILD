# Maintainer: Chglish
pkgname='arch-fast-install'
pkgver=0.0.9
pkgrel=2
epoch=
pkgdesc="Arch快速安装脚本"
arch=('x86_64')
url=""
license=('MIT')
groups=(local-built)
depends=('zsh' 'make' 'glibc')
makedepends=('gcc' 'make')
checkdepends=()
optdepends=('local-data: 教程文件')
provides=()
conflicts=()
replaces=()
backup=()
options=()
changelog=
install=
source=("arch-fast-install.tar.gz")
noextract=()
sha256sums=("SKIP")
validpgpkeys=()

build() {
	cd "arch-fast-install/"
	gcc script-helper.c -o script-helper
}

package() {
	install -D -m=0755 "arch-fast-install/script/help.sh" "${pkgdir}/usr/bin/arch-fast-install-help.sh"
	install -D -m=0755 "arch-fast-install/script-helper" "${pkgdir}/usr/bin/script-helper"
	mkdir -p "${pkgdir}/usr/share/arch-fast-install/"
	mv "arch-fast-install/script" "${pkgdir}/usr/share/arch-fast-install/"
	mv "arch-fast-install/tool" "${pkgdir}/usr/share/arch-fast-install/"
	ln -s "/usr/share/local-data/doc" "${pkgdir}/usr/share/arch-fast-install/doc"
}

